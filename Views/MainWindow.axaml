<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="using:CoffeeShopPOS.Models"
        x:Class="CoffeeShopPOS.Views.MainWindow"
        Title="Brew &amp; Beans Coffee Shop"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="BREW &amp; BEANS COFFEE SHOP"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Menu Display Area -->
        <Border Grid.Row="1" 
                BorderBrush="Gray" 
                BorderThickness="2" 
                Padding="10"
                CornerRadius="5">
            
            <ScrollViewer>
                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="CODE" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Grid.Column="1" Text="PRODUCT NAME" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Grid.Column="2" Text="CATEGORY" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Grid.Column="3" Text="BASE PRICE" FontWeight="Bold" FontSize="14"/>
                    </Grid>
                    
                    <Separator Margin="0,5"/>
                    
                    <!-- Menu Items -->
                    <ItemsControl x:Name="MenuItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:Beverage">
                                <Border Padding="10,8" 
                                        Margin="0,5"
                                        Background="#000000ff"
                                        CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding Code}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Name}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Category}"/>
                                        <TextBlock Grid.Column="3" Text="{Binding BasePrice, StringFormat='â‚±{0:F2}'}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                </StackPanel>
            </ScrollViewer>
            
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Spacing="10"
                    Margin="0,20,0,0">
            
            <Button Content="Refresh Menu" 
                    Width="150" 
                    Height="40"
                    Click="BtnRefreshMenu_Click"/>
            
            <Button Content="Exit" 
                    Width="150" 
                    Height="40"
                    Click="BtnExit_Click"/>
        </StackPanel>
        
    </Grid>
    
</Window>